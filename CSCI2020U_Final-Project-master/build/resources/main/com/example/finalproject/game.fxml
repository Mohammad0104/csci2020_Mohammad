<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="gamePane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalproject.GameController">
   <children>
      <Button fx:id="quitButton" layoutX="712.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleQuitBtn" text="Quit Game" />
      <Text fx:id="gameTitle" layoutX="173.0" layoutY="89.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Level of Difficulty">
         <font>
            <Font name="Bell MT Bold" size="60.0" />
         </font>
      </Text>
      <Button fx:id="levelEasy" layoutX="299.0" layoutY="130.0" mnemonicParsing="false" onAction="#OnActionLevelEasy" prefHeight="58.0" prefWidth="232.0" text="Easy: Addition">
         <font>
            <Font name="Bell MT" size="20.0" />
         </font>
      </Button>
      <Button fx:id="levelMedium" layoutX="299.0" layoutY="220.0" mnemonicParsing="false" onAction="#OnActionLevelMedium" prefHeight="58.0" prefWidth="232.0" text="Medium: Subtraction">
         <font>
            <Font name="Bell MT" size="20.0" />
         </font>
      </Button>
      <Button fx:id="levelExtreme" layoutX="299.0" layoutY="400.0" mnemonicParsing="false" onAction="#OnActionLevelExtreme" prefHeight="58.0" prefWidth="232.0" text="Extreme: Multiplication">
         <font>
            <Font name="Bell MT" size="20.0" />
         </font>
      </Button>
      <Button fx:id="levelHard" layoutX="299.0" layoutY="310.0" mnemonicParsing="false" onAction="#OnActionLevelHard" prefHeight="58.0" prefWidth="232.0" text="Hard: Division">
         <font>
            <Font name="Bell MT" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
